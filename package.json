      },
      {
        "command": "noted.setupDefaultFolder",
        "title": "Noted: Setup Default Notes Folder"
      },
      {
        "command": "noted.setupCustomFolder",
        "title": "Noted: Setup Custom Notes Folder"
      },
      {
        "command": "noted.deleteNote",
        "title": "Noted: Delete Note"
      },
      {
        "command": "noted.renameNote",
        "title": "Noted: Rename Note"
      },
      {
        "command": "noted.duplicateNote",
        "title": "Noted: Duplicate Note"
      },
      {
        "command": "noted.copyPath",
        "title": "Noted: Copy Path"
      },
      {
        "command": "noted.revealInExplorer",
        "title": "Noted: Show in System Explorer"
      },
      {
        "command": "noted.createCustomTemplate",
        "title": "Noted: Create Custom Template",
        "icon": "$(add)"
      },
      {
        "command": "noted.editCustomTemplate",
        "title": "Noted: Edit Custom Template",
        "icon": "$(edit)"
      },
      {
        "command": "noted.deleteCustomTemplate",
        "title": "Noted: Delete Custom Template",
        "icon": "$(trash)"
      },
      {
        "command": "noted.duplicateCustomTemplate",
        "title": "Noted: Duplicate Custom Template",
        "icon": "$(copy)"
      },
      {
        "command": "noted.previewTemplateVariables",
        "title": "Noted: Template Variables Reference",
        "icon": "$(question)"
      },
      {
        "command": "noted.openTemplatesFolder",
        "title": "Noted: Open Templates Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "noted.showConfig",
        "title": "Noted: Show Configuration (Debug)"
      },
      {
        "command": "noted.createFolder",
        "title": "Noted: Create Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "noted.moveNote",
        "title": "Noted: Move Note to Folder"
      },
      {
        "command": "noted.renameFolder",
        "title": "Noted: Rename Folder"
      },
      {
        "command": "noted.deleteFolder",
        "title": "Noted: Delete Folder"
      },
      {
        "command": "noted.showCalendar",
        "title": "Noted: Show Calendar View",
        "icon": "$(calendar)"
      },
      {
        "command": "noted.showGraph",
        "title": "Noted: Show Graph View",
        "icon": "$(graph)"
      },
      {
        "command": "noted.filterByTag",
        "title": "Noted: Filter Notes by Tag",
        "icon": "$(tag)"
      },
      {
        "command": "noted.clearTagFilters",
        "title": "Noted: Clear Tag Filters",
        "icon": "$(clear-all)"
      },
      {
        "command": "noted.sortTagsByName",
        "title": "Noted: Sort Tags by Name",
        "icon": "$(sort-precedence)"
      },
      {
        "command": "noted.sortTagsByFrequency",
        "title": "Noted: Sort Tags by Frequency",
        "icon": "$(graph)"
      },
      {
        "command": "noted.refreshTags",
        "title": "Noted: Refresh Tags",
        "icon": "$(refresh)"
      },
      {
        "command": "noted.renameTag",
        "title": "Noted: Rename Tag",
        "icon": "$(edit)"
      },
      {
        "command": "noted.mergeTags",
        "title": "Noted: Merge Tags",
        "icon": "$(git-merge)"
      },
      {
        "command": "noted.deleteTag",
        "title": "Noted: Delete Tag",
        "icon": "$(trash)"
      },
      {
        "command": "noted.exportTags",
        "title": "Noted: Export Tags to JSON",
        "icon": "$(export)"
      },
      {
        "command": "noted.togglePinNote",
        "title": "Noted: Pin/Unpin Note",
        "icon": "$(pin)"
      },
      {
        "command": "noted.archiveNote",
        "title": "Noted: Archive Note",
        "icon": "$(archive)"
      },
      {
        "command": "noted.unarchiveNote",
        "title": "Noted: Unarchive Note",
        "icon": "$(discard)"
      },
      {
        "command": "noted.archiveOldNotes",
        "title": "Noted: Archive Old Notes",
        "icon": "$(archive)"
      },
      {
        "command": "noted.rebuildBacklinks",
        "title": "Noted: Rebuild Backlinks Index",
        "icon": "$(references)"
      },
      {
        "command": "noted.clearBacklinks",
        "title": "Noted: Clear All Backlinks Sections",
        "icon": "$(clear-all)"
      },
      {
        "command": "noted.toggleSelectMode",
        "title": "Noted: Toggle Select Mode",
        "icon": "$(checklist)"
      },
      {
        "command": "noted.toggleNoteSelection",
        "title": "Noted: Toggle Note Selection"
      },
      {
        "command": "noted.selectAllNotes",
        "title": "Noted: Select All Notes",
        "icon": "$(check-all)"
      },
      {
        "command": "noted.clearSelection",
        "title": "Noted: Clear Selection",
        "icon": "$(close-all)"
      },
      {
        "command": "noted.bulkDelete",
        "title": "Noted: Delete Selected Notes",
        "icon": "$(trash)"
      },
      {
        "command": "noted.bulkMove",
        "title": "Noted: Move Selected Notes",
        "icon": "$(folder)"
      },
      {
        "command": "noted.bulkArchive",
        "title": "Noted: Archive Selected Notes",
        "icon": "$(archive)"
      },
      {
        "command": "noted.undo",
        "title": "Noted: Undo Last Operation",
        "icon": "$(discard)"
      },
      {
        "command": "noted.redo",
        "title": "Noted: Redo Last Operation",
        "icon": "$(redo)"
      },
      {
        "command": "noted.showUndoHistory",
        "title": "Noted: Show Undo History",
        "icon": "$(history)"
      },
      {
        "command": "noted.clearUndoHistory",
        "title": "Noted: Clear Undo History",
        "icon": "$(clear-all)"
      },
      {
        "command": "noted.renameSymbol",
        "title": "Noted: Rename Symbol (Refactor Links)",
        "icon": "$(symbol-keyword)"
      },
      {
        "command": "noted.refreshConnections",
        "title": "Noted: Refresh Connections",
        "icon": "$(refresh)"
      },
      {
        "command": "noted.openConnection",
        "title": "Noted: Open Connection"
      },
      {
        "command": "noted.openConnectionSource",
        "title": "Noted: Open Connection Source",
        "icon": "$(go-to-file)"
      },
      {
        "command": "noted.refreshOrphans",
        "title": "Noted: Refresh Orphans",
        "icon": "$(refresh)"
      },
      {
        "command": "noted.refreshPlaceholders",
        "title": "Noted: Refresh Placeholders",
        "icon": "$(refresh)"
      },
      {
        "command": "noted.createNoteFromPlaceholder",
        "title": "Noted: Create Note from Placeholder",
        "icon": "$(add)"
      },
      {
        "command": "noted.openPlaceholderSource",
        "title": "Noted: Open Placeholder Source",
        "icon": "$(go-to-file)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "noted.extractSelectionToNote",
          "when": "editorHasSelection",
          "group": "noted@1"
        }
      ],
      "view/title": [
        {
          "command": "noted.createQuickNote",
          "when": "view == notedView",
          "group": "navigation@1"
        },
        {
          "command": "noted.openWithTemplate",
          "when": "view == notedView",
          "group": "navigation@2"
        },
        {
          "command": "noted.createFolder",
          "when": "view == notedView",
          "group": "navigation@3"
        },
        {
          "command": "noted.searchNotes",
          "when": "view == notedView",
          "group": "navigation@4"
        },
        {
          "command": "noted.quickSwitcher",
          "when": "view == notedView",
          "group": "navigation@4.5"
        },
        {
          "command": "noted.refresh",
          "when": "view == notedView",
          "group": "navigation@5"
        },
        {
          "command": "noted.showGraph",
          "when": "view == notedView",
          "group": "navigation@6"
        },
        {
          "command": "noted.openToday",
          "when": "view == notedJournalView",
          "group": "navigation@1"
        },
        {
          "command": "noted.showCalendar",
          "when": "view == notedJournalView",
          "group": "navigation@2"
        },
        {
          "command": "noted.refresh",
          "when": "view == notedJournalView",
          "group": "navigation@3"
        },
        {
          "command": "noted.clearTagFilters",
          "when": "view == notedView && noted.hasActiveTagFilters",
          "group": "navigation@7"
        },
        {
          "command": "noted.toggleSelectMode",
          "when": "view == notedView",
          "group": "navigation@8"
        },
        {
          "command": "noted.bulkDelete",
          "when": "view == notedView && noted.selectModeActive && noted.hasSelectedNotes",
          "group": "bulk@1"
        },
        {
          "command": "noted.bulkMove",
          "when": "view == notedView && noted.selectModeActive && noted.hasSelectedNotes",
          "group": "bulk@2"
        },
        {
          "command": "noted.bulkArchive",
          "when": "view == notedView && noted.selectModeActive && noted.hasSelectedNotes",
          "group": "bulk@3"
        },
        {
          "command": "noted.clearSelection",
          "when": "view == notedView && noted.selectModeActive && noted.hasSelectedNotes",
          "group": "bulk@4"
        },
        {
          "command": "noted.showStats",
          "when": "view == notedView",
          "group": "actions@1"
        },
        {
          "command": "noted.exportNotes",
          "when": "view == notedView",
          "group": "actions@2"
        },
        {
          "command": "noted.filterByTag",
          "when": "view == notedTagsView",
          "group": "navigation@1"
        },
        {
          "command": "noted.sortTagsByName",
          "when": "view == notedTagsView",
          "group": "navigation@2"
        },
        {
          "command": "noted.sortTagsByFrequency",
          "when": "view == notedTagsView",
          "group": "navigation@3"
        },
        {
          "command": "noted.refreshTags",
          "when": "view == notedTagsView",
          "group": "navigation@4"
        },
        {
          "command": "noted.renameTag",
          "when": "view == notedTagsView",
          "group": "actions@1"
        },
        {
          "command": "noted.mergeTags",
          "when": "view == notedTagsView",
          "group": "actions@2"
        },
        {
          "command": "noted.deleteTag",
          "when": "view == notedTagsView",
          "group": "actions@3"
        },
        {
          "command": "noted.exportTags",
          "when": "view == notedTagsView",
          "group": "actions@4"
        },
        {
          "command": "noted.refreshConnections",
          "when": "view == notedConnectionsView",
          "group": "navigation@1"
        },
        {
          "command": "noted.refreshOrphans",
          "when": "view == notedOrphansView",
          "group": "navigation@1"
        },
        {
          "command": "noted.refreshPlaceholders",
          "when": "view == notedPlaceholdersView",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "noted.renameFolder",
          "when": "view == notedView && viewItem == custom-folder",
          "group": "folder@2"
        },
        {
          "command": "noted.deleteFolder",
          "when": "view == notedView && viewItem == custom-folder",
          "group": "folder@3"
        },
        {
          "command": "noted.toggleNoteSelection",
          "when": "view == notedView && viewItem == note && noted.selectModeActive",
          "group": "selection@1"
        },
        {
          "command": "noted.moveNote",
          "when": "view == notedView && viewItem == note",
          "group": "edit@1"
        },
        {
          "command": "noted.deleteNote",
          "when": "view == notedView && viewItem == note",
          "group": "edit@2"
        },
        {
          "command": "noted.renameNote",
          "when": "view == notedView && viewItem == note",
          "group": "edit@3"
        },
        {
          "command": "noted.duplicateNote",
          "when": "view == notedView && viewItem == note",
          "group": "edit@4"
        },
        {
          "command": "noted.copyPath",
          "when": "view == notedView && viewItem == note",
          "group": "clipboard@1"
        },
        {
          "command": "noted.revealInExplorer",
          "when": "view == notedView && viewItem == note",
          "group": "clipboard@2"
        },
        {
          "command": "noted.togglePinNote",
          "when": "view == notedView && viewItem == note",
          "group": "organize@1"
        },
        {
          "command": "noted.archiveNote",
          "when": "view == notedView && viewItem == note",
          "group": "organize@2"
        },
        {
          "command": "noted.filterByTag",
          "when": "view == notedTagsView && viewItem == tag",
          "group": "navigation@1"
        },
        {
          "command": "noted.renameTag",
          "when": "view == notedTagsView && viewItem == tag",
          "group": "edit@1"
        },
        {
          "command": "noted.deleteTag",
          "when": "view == notedTagsView && viewItem == tag",
          "group": "edit@2"
        },
        {
          "command": "noted.openConnection",
          "when": "view == notedConnectionsView && viewItem == connection",
          "group": "navigation@1"
        },
        {
          "command": "noted.openConnectionSource",
          "when": "view == notedConnectionsView && viewItem == connection",
          "group": "navigation@2"
        },
        {
          "command": "noted.createNoteFromPlaceholder",
          "when": "view == notedPlaceholdersView && viewItem == placeholder-group",
          "group": "navigation@1"
        },
        {
          "command": "noted.openPlaceholderSource",
          "when": "view == notedPlaceholdersView && viewItem == placeholder-source",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "Noted",
      "properties": {
        "noted.notesFolder": {
          "type": "string",
          "default": "Notes",
          "description": "Folder name for storing notes"
        },
        "noted.fileFormat": {
          "type": "string",
          "enum": [
            "txt",
            "md"
          ],
          "default": "md",
          "description": "File format for notes"
        },
        "noted.useTemplate": {
          "type": "boolean",
          "default": false,
          "description": "Use a custom template for new notes"
        },
        "noted.template": {
          "type": "string",
          "default": "{date}\n==================================================\n\nPROBLEM:\n\n\nSTEPS TAKEN:\n1. \n\nSOLUTION:\n\n\nNOTES:\n",
          "description": "Template for new notes. Use {date} and {time} as placeholders.",
          "editPresentation": "multilineText"
        },
        "noted.tagAutoComplete": {
          "type": "boolean",
          "default": true,
          "description": "Enable tag autocomplete suggestions when typing # in metadata section of the file"
        },
        "noted.autoBacklinks": {
          "type": "boolean",
          "default": true,
          "description": "Automatically append backlinks section to notes when other notes link to them"
        },
        "noted.graph.style.fontSize": {
          "type": "number",
          "default": 12,
          "description": "Font size for node labels in the graph view"
        },
        "noted.graph.style.node.note": {
          "type": "string",
          "default": "#69db7c",
          "description": "Color for note nodes in the graph"
        },
        "noted.graph.style.node.tag": {
          "type": "string",
          "default": "#ff922b",
          "description": "Color for tag nodes in the graph"
        },
        "noted.graph.style.node.placeholder": {
          "type": "string",
          "default": "#e599f7",
          "description": "Color for placeholder nodes (unresolved links) in the graph"
        },
        "noted.graph.style.node.orphan": {
          "type": "string",
          "default": "#adb5bd",
          "description": "Color for orphan nodes (notes with no connections) in the graph"
        },
        "noted.graph.titleMaxLength": {
          "type": "number",
          "default": 24,
          "description": "Maximum length for node titles in the graph view"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require out/test/setup.js out/test/unit/**/*.test.js",
    "package": "vsce package --no-dependencies",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:patch": "standard-version --release-as patch && pnpm run package",
    "release:minor": "standard-version --release-as minor && pnpm run package",
    "release:major": "standard-version --release-as major && pnpm run package",
    "release": "standard-version && pnpm run package",
    "publish:release": "git push --follow-tags origin main"
  },
  "packageManager": "pnpm@8.15.9",
  "devDependencies": {
    "@types/chai": "4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.0.0",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "chai": "4",
    "conventional-changelog-cli": "^5.0.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "sinon": "^21.0.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}
