// Helper: Create task list
function createTaskList(tasks, withCheckbox) {
  if (!tasks || tasks.length === 0) {
    return '- \n';
  }

  return tasks.map(task => {
    if (withCheckbox) {
      return `- [ ] ${task}`;
    }
    return `- ${task}`;
  }).join('\n');
}

// Helper: Create blocker section
function createBlockerSection() {
